{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++1y",
                "-Wall",
                "-I${workspaceFolder}/src/include",
                "-I${workspaceFolder}/src/include/lib",
                "-I${workspaceFolder}/src/include/lib/imgui",
                "-I${workspaceFolder}/src/include/lib/imgui/backends",
                
                "-g",
                "${workspaceFolder}/src/**.cpp",
                "${fileDirname}/include/lib/imgui/backends/imgui_impl_sdlrenderer.cpp",
                "${fileDirname}/include/lib/imgui/backends/imgui_impl_sdl.cpp",
                "-o",
                "${workspaceFolder}/main",
                "-lSDL2", 
                "-lSDL2_image",
                "-limgui",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}